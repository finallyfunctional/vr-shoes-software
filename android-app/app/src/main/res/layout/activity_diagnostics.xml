<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.DiagnosticsActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <Button
            android:id="@+id/diagnosticsPingBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="showLogsBtnClick"
            android:text="@string/show_logs" />

        <Button
            android:id="@+id/diagnosticsButtonTestBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="buttonsTestBtnClick"
            android:text="@string/buttons_test" />

        <Button
            android:id="@+id/diagnosticsMovementBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="movementBtnClick"
            android:text="@string/movement" />

        <Button
            android:id="@+id/diagnosticsManualControlBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="manualControlBtnClick"
            android:text="@string/manual_control" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>